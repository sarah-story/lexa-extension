{
  "name": "Content Script - Get selection",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Gets the selected text from the current page.",
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png",
    "popup" : "popup.html"    
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://*.firebaseio.com; object-src 'self'"
}